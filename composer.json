{
  "name" : "seankmchenry/_s-starter",
  "description" : "Starter project for WordPress sites",
  "type" : "project",
  "license" : "MIT",
  "config": {
    "vendor-dir": "packages"
  },
  "repositories": [
    {
      "type": "composer",
      "url": "https://wpackagist.org"
    }
  ],
  "require": {
    "composer/installers": "^1.2",
    "johnpbloch/wordpress": "^4.7",
    "php": "^5.5",
    "roots/soil": "^3.7",
    "wpackagist-plugin/simple-page-sidebars": "^1.2",
    "wpackagist-plugin/imsanity": "^2.3",
    "wpackagist-plugin/force-regenerate-thumbnails": "^2.0"
  },
  "extra": {
    "installer-paths": {
      "content/plugins/{$name}": ["type:wordpress-plugin"],
      "content/mu-plugins/{$name}" : ["type:wordpress-muplugin"],
      "content/themes/{$name}": ["type:wordpress-theme"]
    },
    "wordpress-install-dir": "wp"
  }
}
